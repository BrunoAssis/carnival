- value = "" if value.nil?
- field = presenter.get_field(field)
- if presenter.relation_field?(field)
  - if field.advanced_search_operator == :equal
    = select_tag field.name.to_sym, options_for_select(presenter.get_association(field.association_name).klass.list_for_select(reverse: true, add_empty_option: true), value), "data-operator" => 'equal'
  - else
    = text_field_tag field.name, value, "data-operator" => field.advanced_search_operator
- else
  - if presenter.field_type(field.name) == :boolean
    = select_tag field.name, options_for_select([['',''],['true', 'true'],['false', 'false']], value)
  - elsif presenter.field_type(field.name) == :datetime
    = text_field_tag field.name, value, "data-operator" => field.advanced_search_operator, :class => "datepicker"
  - else
    = text_field_tag field.name, value, "data-operator" => field.advanced_search_operator
